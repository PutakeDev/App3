<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:HorizontalPanel>
			<g:VerticalPanel>
		
			<g:Grid width="100%" height="100%">
				<g:row>
					<g:customCell><g:Label text="Location Name"/></g:customCell>
					<g:customCell><g:Label text="99"/></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label text="Region"/></g:customCell>
					<g:customCell><g:Label text="99"/></g:customCell>
				</g:row>				
				<g:row>
					<g:customCell><g:Label text="Street"/></g:customCell>
					<g:customCell><g:Label text="99"/></g:customCell>
				</g:row>	
				<g:row>
					<g:customCell><g:Label text="City"/></g:customCell>
					<g:customCell><g:Label text="99"/></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label text="Number of Hives"/></g:customCell>
					<g:customCell><g:Label text="99"/></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label text="Last Visit"/></g:customCell>
					<g:customCell><g:Label text="today (Joerg)"/></g:customCell>
				</g:row>	
																<g:row>
					<g:customCell><g:Label text="Upcoming Tasks"/></g:customCell>
					<g:customCell><g:Label text="Many"/></g:customCell>
				</g:row>	
			</g:Grid>
			
			</g:VerticalPanel>
			
			<g:VerticalPanel>
			
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder>
