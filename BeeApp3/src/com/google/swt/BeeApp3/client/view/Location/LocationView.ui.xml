<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w="urn:import:com.google.gwt.widget.client">
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:VerticalPanel height="186px" width="427px">
			<g:Label text="New Label"/>
			<g:Label text="New Label"/>
			<g:HorizontalPanel height="51px" width="413px">
				<g:CaptionPanel captionText="Hives" >
					<g:VerticalPanel>
						<g:Hyperlink text="View Hives" targetHistoryToken="newHistoryToken"/>
						<g:Hyperlink text="Create Hive" targetHistoryToken="newHistoryToken"/>
						<g:Hyperlink text="Inspect Hive" targetHistoryToken="newHistoryToken"/>
						<g:Hyperlink text="Modify Hive" targetHistoryToken="newHistoryToken"/>
						<g:Hyperlink text="New Hyperlink" targetHistoryToken="newHistoryToken"/>
						<g:Hyperlink text="New Hyperlink" targetHistoryToken="newHistoryToken"/>
					</g:VerticalPanel>
				</g:CaptionPanel>
				<g:DecoratorPanel>
					<g:VerticalPanel height="129px">
						<g:HorizontalPanel>
							<g:VerticalPanel>
								<g:HTML wordWrap="true">Location</g:HTML>						
								<g:ListBox visibleItemCount="10" ui:field="LocationList"/>
							</g:VerticalPanel>							
							
							<g:VerticalPanel>
								<g:HTML wordWrap="true">Apiary</g:HTML>						
								<g:ListBox visibleItemCount="10"/>
							</g:VerticalPanel>
							
							<g:VerticalPanel>
								<g:HTML wordWrap="true">Filter</g:HTML>						
								<g:ListBox visibleItemCount="10"/>
							</g:VerticalPanel>
							
							<g:VerticalPanel>
								<g:HTML wordWrap="true">Hive</g:HTML>						
								<g:ListBox visibleItemCount="10" ui:field="HiveList"/>
							</g:VerticalPanel>						
						</g:HorizontalPanel>
						
						
							<g:VerticalPanel>
								<g:HorizontalPanel>
									<g:HTML wordWrap="true">Hives</g:HTML>
									<g:Label text="New Label"/>
								</g:HorizontalPanel>
								<g:SimplePanel>
									<w:TextButton width="100%" height="100%">New button</w:TextButton>
								</g:SimplePanel>	
								
								
								<g:HTML wordWrap="true">Hives</g:HTML>
								
								
							</g:VerticalPanel>
						
					</g:VerticalPanel>
				</g:DecoratorPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:SimplePanel>
			<g:Grid width="100%" height="100%">
				<g:row>
					<g:customCell><g:Label text="Parent Apiary"/></g:customCell>
					<g:customCell><g:TextBox/></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label text="Hive Name"/></g:customCell>
					<g:customCell><g:TextBox ui:field="createHiveName"/></g:customCell>
				</g:row>				
				<g:row>
					<g:customCell><g:Label text="Hive Number"/></g:customCell>
					<g:customCell><g:TextBox ui:field="createHiveNumber"/></g:customCell>
				</g:row>	
				<g:row>
					<g:customCell><g:Label text="Hive Barcode"/></g:customCell>
					<g:customCell><g:TextBox ui:field="createHiveBarCode"/></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label text="Hive RFID"/></g:customCell>
					<g:customCell><g:TextBox ui:field="createHiveRFID"/></g:customCell>
				</g:row>				
			</g:Grid>
		</g:SimplePanel>
		<w:TextButton text="Create Hive" value="CreateHive" ui:field="CreateHiveButton">New button</w:TextButton>
	</g:FlowPanel>
</ui:UiBinder>
